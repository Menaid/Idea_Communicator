# ==============================================
# Idea Communicator - Environment Configuration
# ==============================================
# Copy this file to .env and update with your values

# ==============================================
# General Configuration
# ==============================================
NODE_ENV=development
COMPOSE_PROJECT_NAME=ideacomm

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
POSTGRES_DB=ideacomm
POSTGRES_USER=ideacomm_user
POSTGRES_PASSWORD=change_me_in_production_use_strong_password

# ==============================================
# Redis Configuration
# ==============================================
REDIS_PASSWORD=change_me_in_production_use_strong_password

# ==============================================
# MinIO Storage Configuration
# ==============================================
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=change_me_in_production_use_strong_password
MINIO_REGION=eu-central-1

# ==============================================
# Backend API Configuration
# ==============================================
API_PORT=3000
JWT_SECRET=change_me_in_production_use_very_long_random_string_minimum_32_chars

# ==============================================
# WebRTC Configuration
# ==============================================
# Port range for WebRTC media
RTC_MIN_PORT=40000
RTC_MAX_PORT=40100

# Public IP address for WebRTC (use your server's public IP in production)
# For local development, use 127.0.0.1 or your local IP
ANNOUNCED_IP=127.0.0.1

# ==============================================
# Frontend Configuration
# ==============================================
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WS_URL=ws://localhost:3000
REACT_APP_WEBRTC_URL=http://localhost:4000

# ==============================================
# AI Service API Keys
# ==============================================
# OpenAI API Key (for Whisper transcription)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key (for Claude AI summaries)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Deepgram API Key (alternative transcription service)
# Get your key at: https://console.deepgram.com/
DEEPGRAM_API_KEY=your-deepgram-api-key-here

# Choose AI provider: 'openai' or 'anthropic' or 'deepgram'
AI_PROVIDER=openai

# ==============================================
# Security & GDPR Configuration
# ==============================================
# Data storage region: 'sweden', 'eu', 'usa', 'canada'
DATA_REGION=eu

# Enable audit logging for GDPR compliance
AUDIT_LOGGING=true

# Default retention period in days
DEFAULT_RETENTION_DAYS=180

# ==============================================
# Email Configuration (for notifications)
# ==============================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@ideacomm.app

# ==============================================
# Development & Debugging
# ==============================================
DEBUG=false
LOG_LEVEL=info

# ==============================================
# Production Deployment (Hetzner)
# ==============================================
# Uncomment and configure for production deployment
# SERVER_IP=your-server-ip
# DOMAIN=yourdomain.com
# SSL_EMAIL=your-email@example.com
